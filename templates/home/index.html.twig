{% extends 'base.html.twig' %}

{% block title %}Bienvenue dans Lobiko{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('map') }}

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Red+Hat+Mono:wght@500&display=swap" rel="stylesheet">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}

{% block body %}
    <h3 class="h3 m-2">
        <img src="icons/48x48.png"/>
        Lobiko
    </h3>
    <ul class="d-none">
        {% for bank in banks %}
            <li class="item" data-lat="{{ bank.address.latitude }}" data-lng="{{ bank.address.longitude }}" data-title="{{ bank.name }}"></li>
        {% endfor %}
    </ul>
    <div id="map"></div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('map') }}
    {{ encore_entry_script_tags('sw') }}
{% endblock %}